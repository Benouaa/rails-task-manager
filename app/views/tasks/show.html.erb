<h1><%= @task[:title] %></h1>
<%= link_to "Edit this task", edit_task_path %>


<div class="task-description">
  <p><%= @task[:details] %></p>
</div>
<div class="task-status">
  <% if @task[:completed] == true %>
    <div class="checkbox">
      <p><input type="checkbox" value="" checked>
      <span class="cr"><i class="cr-icon fa fa-check"></i></span> This task is completed</p>
    </div>
  <%else %>
    <div class="checkbox">
      <p><input type="checkbox" value=""> This task is not completed !
      <span class="cr"><i class="cr-icon fa fa-check"></i></span></p>
    </div>
  <% end %>
</div>

<div class="back-to-list">
  <%= link_to "Back to list", tasks_path %>
</div>
