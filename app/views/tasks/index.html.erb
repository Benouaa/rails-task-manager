<h1>My Tasks</h1>
  <p><% @tasks.each do |task| %>
    <% if task.completed %>
      <div class="checkbox">
        <input type="checkbox" value="" checked>
        <span class="cr"><i class="cr-icon fa fa-check"></i></span>
        <%= link_to "#{task.title}", task_path(task.id) %>
        <%= link_to "Delete", destroy_task_path(task.id), method: 'delete', data: {confirm: "Are you sure?"} %>
      </div>
    <%else %>
      <div class="checkbox">
        <input type="checkbox" value="">
        <span class="cr"><i class="cr-icon fa fa-check"></i></span>
        <%= link_to "#{task.title}", task_path(task.id) %>
        <%= link_to "Delete", destroy_task_path(task.id), method: 'delete', data: {confirm: "Are you sure?"} %>
      </div>
    <% end %>
   <% end %>
   <div class="add-a-task">
    <p> <%= link_to "Add a task", new_task_path %></p>
   </div>
 </p>
